@model IEnumerable<CategoryModel>

<div class="container-fluid" style="padding:0">
    <div class="row">
        <div class="col-3" style="padding:0">

            @foreach (var category in Model)
            {
                <div class"col-md-4">
                    @*<div class=" p-1 border nav-link  bg-dark text-light text-center" style="background-color:whitesmoke;border:solid">*@
                    <button class="btn btn-outline-dark btn-block" onclick="showproduct(@category.CategoryId)">@category.CategoryName</button>
                </div>
                @* </div>*@
            }



        </div>
       
      
        <div class="col-5 offset-2" id="products">
            @foreach (var products in ViewBag.products)
            
            {

                <div id="@products.ProductName@products.CategoryId" style="display:none" class="@products.CategoryId">
                    <div class="card my-2">
                        <div class="card-header ">
                            <h1 class="alig">@products.ProductName</h1>
                        </div>
                        <div class="card-body">

                            <img src=@products.Image alt="img">


                            <p>@products.Decription</p>
                            <p><i class="fa fa-inr" aria-hidden="true"></i> @products.Mrp</p>

                        </div>
                        <div class="card-footer">
                            footer
                            <button class="btn btn-success float-right" id="btnSave" onclick="AddToCart(@products.ProductId)"> Add to card</button>
                        </div>
                    </div>
                </div>

            }
        </div>
       

    </div>

</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <table id="tableIdAddToCart">
                </table>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

